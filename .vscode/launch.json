{
    "version": "0.2.0",
    "configurations": [
		{
			"name": ".NET Core Launch - Homework Step 1 (Console App)",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "Build Homework Step 1 (Console App)",
			"program": "${workspaceFolder}/Homework.ConsoleApp/bin/Debug/netcoreapp3.1/Homework.ConsoleApp.dll",
			"args": [],
			"cwd": "${workspaceFolder}/Homework.ConsoleApp",
			"console": "externalTerminal",
			"stopAtEntry": false,
			"internalConsoleOptions": "openOnSessionStart",
		},
		{
			"name": ".NET Core Launch - Homework Step 2 (API)",
			"type": "coreclr",
			"request": "launch",
			"preLaunchTask": "Build Homework Step 2 (API)",
			"program": "${workspaceFolder}/Homework.Api/bin/Debug/netcoreapp3.1/Homework.Api.dll",
			"args": [],
			"cwd": "${workspaceFolder}/Homework.Api",
			"stopAtEntry": false,
			"serverReadyAction": {
				"action": "openExternally",
				"pattern": "^\\s*Now listening on:\\s+(https?://\\S+)"
			},
			"env": {
				"ASPNETCORE_ENVIRONMENT": "Development"
			}
		}
    ]
}